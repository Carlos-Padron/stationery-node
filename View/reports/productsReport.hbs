<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos en inventario</title>
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:400"
      rel="stylesheet"
    />

    <style>

      * {font-family: 'Open Sans', sans-serif; } .logo-img{ width: 5cm
      !important; } table { border-collapse: collapse; } .table { width: 100%;
      margin-bottom: 1rem; border-color: #8898aa; color: #525f7f;
      background-color: transparent; } .table .thead-light th { color: #8898aa;
      border-color: #8898aa; background-color: #f6f9fc; border: 1px solid
      #8898aa !important;} .table .thead-light th { color: #8898aa;
      background-color: #f6f9fc; } .table .list td { border: 1px solid #8898aa
      !important;} tr { page-break-inside:avoid; page-break-after:auto }

    </style>
  </head>
  <body>
    <table id="header" style="margin-bottom: 20px;">
      <tr>
        <td style="width: 69%;">
          <img class="logo-img" src="data:image/png;base64,{{logo}}" />
        </td>
        <td style="margin-top: auto; margin-bottom:auto">
          <h5 style="margin:0;">Productos en inventario </h5>
          <h5 style="margin-top:8px;margin-bottom:3px;">Fecha: {{date}}</h5>
        </td>
      </tr>
    </table>

    <table id="content" class="table">
      <thead class="thead-light">
        <tr>
          <th class="text-center">
            <p style="font-size:12px">Nombre del producto</p>
          </th>
          <th class="text-center">
            <p style="font-size:12px">Marca</p>
          </th>
          <th class="text-center">
            <p style="font-size:12px">Tipo de art√≠culo</p>
          </th>
          <th class="text-center">
            <p style="font-size:12px">Cantidad</p>
          </th>
          <th class="text-center">
            <p style="font-size:12px">Precio</p>
          </th>
        </tr>
      </thead>
      <tbody class="list">
        {{#each products}}
          <tr {{#customIf this.quantity "<=" 30   }}
            style="background-color:#FFEBEE"
          {{/customIf}} 
          >
            <td class="text-center" style="font-size:12px">
              {{this.name}}
            </td>
            <td class="text-center" style="font-size:12px">
              {{this.brand.name}}
            </td>
            <td class="text-center" style="font-size:12px">
              {{this.articleType.name}}
            </td>
            <td class="text-center" style="font-size:12px">
              {{this.quantity}}
            </td>
            <td class="text-center" style="font-size:12px">
              ${{this.price}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>