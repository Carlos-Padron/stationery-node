{{#extend "master"}}
{{#content "body" mode="append"}}
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3 class="mb-0">¡Actualiza tu perfil!</h3>
    </div>
    <div class="card-body">
        <form id="productoForm">
            <div class="row">
                <input id="_id" type="hidden">

                <div class="col-md-4 d-flex flex-column align-items-center justify-content-between">
                    <img id="image" class="dropZone rounded-circle img-fluid mb-4" src="{{user.imageRelativePath}}"
                        alt="" srcset="" style="
                            object-fit: cover;
                            height: 206px;
                            width: 206px;
                            border: 4px solid #5e72e4;
                          " />
                    <div id="imgOverlay"
                        class="dropZone rounded-circle bg-primary d-flex flex-column align-items-center justify-content-center"
                        style="
                            position: absolute;
                            height: 206px;
                            width: 206px;
                            background-color: #f6f9fc !important;
                            opacity: 0.8;
                          ">
                        <small class="text-center">Arrastra una imagen o <br />
                            <span id="uploadImgElem" style="cursor: pointer" class="text-info"><u>haz
                                    click</u></span></small>
                    </div>
                    <i id="removeImgElem" class="uil uil-times-circle text-primary visibility"
                        style="cursor: pointer; font-size: 1.2em"></i>
                </div>

                <div class="col-md-8">
                    <div class="row">
                        <div class="col-6">
                            <small id="nameMsg"></small>
                            <div class="form-group">
                                <label class="form-control-label">Nombre:</label>
                                <input class="form-control form-control-sm " placeholder="Usuario" type="text" id="name"
                                    value="{{user.name}}">
                            </div>
                        </div>
                        <div class="col-6">
                            <small id="motherSurnameMsg"></small>
                            <div class="form-group">
                                <label class="form-control-label">Apellido materno:</label>
                                <input class="form-control form-control-sm " placeholder="Apellido materno" type="text"
                                    id="motherSurname" value="{{user.motherSurname}}">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <small id="fatherSurnameMsg"></small>
                            <div class="form-group">
                                <label class="form-control-label">Apellido paterno:</label>
                                <input class="form-control form-control-sm " placeholder="Apellido paterno" type="text"
                                    id="fatherSurname" value="{{user.fatherSurname}}">
                            </div>
                        </div>
                        <div class="col-6">
                            <small id="emailMsg"></small>
                            <div class="form-group">
                                <label class="form-control-label">Email:</label>
                                <input class="form-control form-control-sm " placeholder="Email" type="text" id="email"
                                    value="{{user.email}}">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <small id="passwordMsg"></small>
                            <div class="form-group">
                                <label class="form-control-label">Contraseña:</label>
                                <input class="form-control form-control-sm " placeholder="Contraseña" type="password"
                                    id="password">
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
    <div class="card-footer text-right">
        <button id="btnUpdate" type="button" class="btn btn-sm btn-primary" style="width:150px">Actualizar</button>
    </div>
</div>


{{/content}}


{{/extend}}