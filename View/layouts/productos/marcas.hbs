{{#extend "master"}}
{{#content "body" mode="append"}}
<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Marcas</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    <label class="form-control-label">Nombre de la marca:</label>
                    <input class="form-control form-control-sm" placeholder="Marca" type="text">
                </div>
            </div>
            <hr>
        </div>

    </div>
    <div class="card-footer text-right">
        <button type="button" class="btn btn-sm btn-primary" style="width:150px">Buscar</button>
    </div>
</div>



<div class="card">
    <div class="card-body">
        <div id="mainTable" class="card-deck"></div>


    </div>
    <div class="card-footer text-right">
        <button type="button" id="btnPrev" class="btn-default btn-sm mb-1 mr-1 rounded-circle">
            &lt;</button>
        <span id="pageCounter"></span>
        <button type="button" id="btnNext" class="btn-default btn-sm mb-1 mr-1 rounded-circle">&gt;</button>
        <div id="pagination" class="d-flex justify-content-end"></div>

    </div>
</div>




{{/content}}

{{/extend}}